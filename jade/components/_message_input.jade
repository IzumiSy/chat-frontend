div.row.message-input
  div.col-sm-10.input-form-column
    div.form-group.input-form-wrapper
      input.form-control.message(
        type="text"
        placeholder="送信するメッセージを入力..."
        v-model="message"
        v-on:keyup.enter="sendMessage"
        v-bind:disabled="resWaiting"
      )
  div.col-sm-2.button-form-column
    div.form-group
      a.btn.btn-primary.say-button(
        v-on:click="sendMessage"
        v-bind:disabled="resWaiting"
      )
       | 発言
